@model IndianArmyWeb.Areas.cpanel.View_Models.MediaCategoryMasterVM

@{
    ViewBag.Title = "Create Menu";
}

<div class="main-card mb-3 card">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card-body">
        <h5 class="card-title">Create Menu Item (s)</h5>
        <hr />
        <div class="position-relative row form-group">
            @Html.LabelFor(model => model.MediaCategoryName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MediaCategoryName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.MediaCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="position-relative row form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="mb-2 mr-2 btn btn-primary" />
            </div>
        </div>
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
